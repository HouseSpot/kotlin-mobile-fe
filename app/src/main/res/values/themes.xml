<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#87CEFA</item>
        <item name="colorPrimaryDark">#4682B4</item>
        <item name="colorAccent">#FFD700</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Text Styles -->
    <style name="HeadingText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubheadingText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="BodyText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Button Styles -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">40dp</item>
        <item name="android:backgroundTint">#FFD700</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">40dp</item>
        <item name="iconStartPadding">20dp</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="android:strokeColor">#000000</item>
        <item name="android:strokeWidth">1</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/rounded_border</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:textAppearance">@style/CustomSpinnerTextAppearance</item>
    </style>

    <style name="CustomSpinnerTextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomSpinnerDropdownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAppearance">@style/CustomSpinnerTextAppearance</item>
    </style>
</resources>
