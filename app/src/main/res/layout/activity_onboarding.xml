<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".ui.auth.OnboardingActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/housespot_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Rekan Menggapai\n Properti Impianmu!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        style="@style/HeadingText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solusi Tepat untuk Kebutuhan Rumah Anda"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_marginTop="8dp"
        style="@style/BodyText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnJoinNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bergabung Sekarang"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="40dp"
        style="@style/PrimaryButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignInWithGoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masuk dengan Google"
        app:icon="@drawable/ic_google"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="40dp"
        style="@style/SecondaryButton" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah punya akun? "
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            style="@style/BodyText" />

        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/linkColor"
            style="@style/BodyText" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
