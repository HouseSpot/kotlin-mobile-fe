<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.orderdetails.fragments.ProgressProyekFragment">

    <!-- Status Proyek -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status Proyek"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:spinnerMode="dropdown" />

    <!-- Riwayat Laporan -->
    <TextView
        android:id="@+id/tv_riwayat_laporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Riwayat Laporan"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_tulis_laporan"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_rounded"
        android:drawableLeft="@drawable/ic_edit"
        android:drawablePadding="8dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="Tulis\nLaporan"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold" />


    <!-- Report Entries -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_reports"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/tv_empty_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No reports available"
        android:textAlignment="center"
        android:visibility="gone"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp" />

</LinearLayout>
